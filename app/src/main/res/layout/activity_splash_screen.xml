<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/SplashScreenLogo"
        android:layout_width="204dp"
        android:layout_height="204dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spalashscreentictactoe" />

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="118dp"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SplashScreenLogo"
        app:layout_constraintVertical_bias="0.725">

        <TextView
            android:id="@+id/tv_designby"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/almendra_bold"
            android:text="Designed By"
            android:textAlignment="center"
            android:textColor="#515151"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="44dp"
            android:fontFamily="@font/atomic_age"
            android:text="SAI CHANDRA"
            android:textAlignment="center"
            android:textColor="#0f4c75"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>